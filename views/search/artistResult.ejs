<div class="row">
  <ul>
    <% artistData.forEach((artist, index) => { %>
    <li>
      <div class="col m4">
        <div class="card">
          <div class="card-image">
            <!-- <img src="" /> -->
            <!-- <a class="btn-floating halfway-fab waves-effect waves-light red"
              ><i class="material-icons">add</i></a
            > -->
          </div>
          <div class="card-content">
            <span class="card-title"><%= artist.name %></span>
            <p>
              Followers: <%= artist.followers.total %><br />
              Genres: <%= artist.genres[0] %><br />
              <br />
            </p>
            <form action="/artists" method="POST">
              <input
                type="text"
                class="hide"
                value="<%= artist.name %>"
                name="artistName"
              />
              <input
                type="text"
                class="hide"
                value="<%= artist.followers.total %>"
                name="artistFollowers"
              />
              <input
                type="text"
                class="hide"
                value="<%= artist.genres[0] %>"
                name="genre"
              />
              <input
                type="text"
                class="hide"
                value="<%= artist.id %>"
                name="artistId"
              />
              <input
                type="text"
                class="hide"
                value="<%= currentUser.id %>"
                name="userId"
              />
              <button type="submit" class="btn">
                <span class="add-btn">Add to likes</span>
                <i class="material-icons">thumb_up</i>
              </button>
            </form>
          </div>
        </div>
      </div>
    </li>

    <br />
    <% }) %>
  </ul>
</div>
