<div class="container">
  <div class="row">
    <ul>
      <% likes.forEach((like, index) => { %>
      <li>
        <div class="col m4">
          <div class="card">
            <div class="card-image">
              <img src="<%= like.imageUrl %>" />
              <!-- <a class="btn-floating halfway-fab waves-effect waves-light red"
                ><i class="material-icons">add</i></a
              > -->
            </div>
            <div class="card-content">
              <span class="card-title"><%= like.songTitle %></span>
              <p>
                Artist: <%= like.artist %><br />
                Album: <%= like.album %><br />
                Preview:
                <a href="<%= like.previewUrl %>" target="__blank">Preview Song</a
                ><br />
                <br />
                <form action="/likes/delete/<%= like.id %>/?_method=DELETE" method="POST">
                  <button class="btn red" type="submit"
                  >Delete song</a
                >
                </form>
                <form action="/posts" method="POST">
                  <input
                type="text"
                class="hide"
                value="<%= like.songTitle %>"
                name="songTitle"
              />
              <input
                type="text"
                class="hide"
                value="<%= like.artist %>"
                name="artist"
              />
              <input
                type="text"
                class="hide"
                value="<%= like.album %>"
                name="album"
              />
              <input
                type="text"
                class="hide"
                value="<%= like.imageUrl %>"
                name="imageUrl"
              />
              <input
                type="text"
                class="hide"
                value="<%= like.previewUrl %>"
                name="previewUrl"
              />
              <input
                type="text"
                class="hide"
                value="<%= currentUser.username %> wants you to listen to this song"
                name="content"
              />
              <input
                type="text"
                class="hide"
                value="<%= currentUser.username %>"
                name="author"
              />
              <input
                type="text"
                class="hide"
                value="<%= currentUser.id %>"
                name="userId"
              />
              <button type="submit" class="btn">
                <span class="add-btn">Post Song</span>
                <i class="material-icons">send</i>
              </button>
                </form>
              </p>
            </div>
          </div>
        </div>
      </li>
  
      <br />
      <% }) %>
    </ul>
  </div>
</div>
